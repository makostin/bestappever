<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        >
    <TextView android:id="@+id/time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="10dip"
              android:paddingLeft="20dip"
              android:textSize="60sp"
              android:textStyle="bold"
              android:textColor="#0b386a"
              android:text="time"/>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dip"
                    android:paddingBottom="10dip"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dip"
            >


        <TextView android:id="@+id/classroom"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:paddingTop="10dip"
                  android:textSize="18sp"
                  android:textColor="#0b386a"
                  android:text="classroom"/>

        <TextView android:id="@+id/subject"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_below="@id/classroom"
                  android:paddingTop="35dip"
                  android:textSize="18sp"
                  android:textStyle="bold"
                  android:textColor="#0b386a"
                  android:text="subject"/>

        <TextView android:id="@+id/group"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_below="@id/subject"
                  android:textSize="18sp"
                  android:textColor="#0b386a"
                  android:text="group"/>

        <TextView android:id="@+id/course"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/subject"
                  android:paddingRight="10dip"
                  android:layout_toLeftOf="@id/group"
                  android:textSize="18sp"
                  android:textColor="#0b386a"
                  android:text="course"/>

    </RelativeLayout>
</RelativeLayout>